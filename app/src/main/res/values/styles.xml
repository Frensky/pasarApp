<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonShort">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">36dp</item>
        <item name="android:paddingRight">36dp</item>
    </style>

    <style name="ButtonGreen" parent="ButtonShort">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ButtonRed" parent="ButtonShort">
        <item name="android:background">@color/color_text_red</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">@color/color_text_light</item>
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="android:textColorHint">@color/color_text_light</item>
        <item name="colorControlNormal">@color/color_text_light</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="ErrorText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_text_red</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="HintText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_text_middle</item>
        <item name="android:textSize">12dp</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out</item>
    </style>
</resources>